{
  "buildCommand": "cd hugo && hugo --minify --baseURL /",
  "outputDirectory": "hugo/public",
  "github": {
    "silent": true
  },
  "build": {
    "env": {
      "HUGO_VERSION": "0.58.3"
    }
  },
  "headers": [
    {
      "source": "/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}