{
  "buildCommand": "cd hugo && hugo --minify",
  "outputDirectory": "hugo/public",
  "installCommand": "curl -L -O https://github.com/gohugoio/hugo/releases/download/v0.58.3/hugo_0.58.3_Linux-64bit.tar.gz && tar -xzf hugo_0.58.3_Linux-64bit.tar.gz && mv hugo /usr/local/bin/",
  "github": {
    "silent": true
  },
  "build": {
    "env": {
      "HUGO_VERSION": "0.58.3"
    }
  },
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}